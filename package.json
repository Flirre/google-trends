{
  "name": "google-trends",
  "version": "1.0.0",
  "private": true,
  "description": "Git hooks for project",
  "devDependencies": {
    "concurrently": "^4.0.1",
    "express": "^4.16.3",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "prettier": "^1.19.1",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "start": "concurrently \"cd client && npm start\" \"cd server && npm run dev\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --single-quote --parser typescript --write",
      "tslint --fix",
      "git add"
    ],
    "*.{js, jsx, json}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "*.css": [
      "prettier --parser css --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@types/node": "^12.12.7",
    "nodemon": "^1.19.4"
  }
}
